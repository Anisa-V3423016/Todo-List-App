generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  task        String
  isDone      Boolean  @default(false)
  createdAt   DateTime @default(now())
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  tasks     Task[]
  createdAt DateTime @default(now())
}

